<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/questionCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#546E7A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Question: 1 / 10" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#FF5252"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionCounterText"
        tools:text="15s" />

    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerText">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="120dp"
            android:padding="20dp"
            android:textColor="#37474F"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Which of these is the currency of Japan?" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option1Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/questionCard"
        app:layout_constraintStart_toStartOf="@id/questionCard"
        app:layout_constraintTop_toBottomOf="@id/questionCard">

        <TextView
            android:id="@+id/option1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_default_bg"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:textColor="#37474F"
            android:textSize="18sp"
            tools:text="A. Rupee" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option2Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/option1Card"
        app:layout_constraintStart_toStartOf="@id/option1Card"
        app:layout_constraintTop_toBottomOf="@id/option1Card">

        <TextView
            android:id="@+id/option2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_default_bg"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:textColor="#37474F"
            android:textSize="18sp"
            tools:text="B. Yen" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option3Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/option2Card"
        app:layout_constraintStart_toStartOf="@id/option2Card"
        app:layout_constraintTop_toBottomOf="@id/option2Card">

        <TextView
            android:id="@+id/option3Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_default_bg"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:textColor="#37474F"
            android:textSize="18sp"
            tools:text="C. Dollar" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/option4Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/option3Card"
        app:layout_constraintStart_toStartOf="@id/option3Card"
        app:layout_constraintTop_toBottomOf="@id/option3Card">

        <TextView
            android:id="@+id/option4Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_default_bg"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:textColor="#37474F"
            android:textSize="18sp"
            tools:text="D. Won" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitNextBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:padding="14dp"
        android:text="Submit"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/option4Card"
        app:layout_constraintStart_toStartOf="@id/option4Card" />

</androidx.constraintlayout.widget.ConstraintLayout>